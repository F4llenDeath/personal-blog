---
import '@/styles/global.css'
import '@/styles/typography.css'
// PhotoSwipe Lightbox styles
import 'photoswipe/style.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { cn } from '@/lib/utils'

import LanguagePicker from '@/components/LanguagePicker.astro'
import { getLangFromUrl } from 'src/i18n/util.ts'

const { isWide = false } = Astro.props
const lang = getLangFromUrl(Astro.url)
---

<!doctype html>
<html lang={lang}>
  <Head>
    <slot name="head" />
  </Head>
  <body>
    <div class="flex h-fit min-h-screen flex-col gap-y-6 font-sans">
      <Header />
      <main class="grow">
        <div
          class={cn(
            'mx-auto flex grow flex-col gap-y-6 px-4',
            !isWide && 'max-w-3xl',
          )}
        >
          <slot />
        </div>
      </main>

      <!-- Language Switcher -->
      <div
        class="text-muted-foreground mx-auto mt-8 max-w-3xl px-4 text-center text-sm"
      >
        <LanguagePicker />
      </div>
      <Footer />
    </div>
  </body>
</html>
