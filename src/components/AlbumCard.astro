---
import { Image } from 'astro:assets';
import { getLangFromUrl, useTranslatedPath } from '@/i18n/util';

export interface Props {
  id: string;
  title: string;
  description?: string;
  cover: string;
  width: number;
  height: number;
}

const { id, title, description, cover, width, height } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
---

<a
  href={translatePath(`/gallery/${id}`)}
  class="group block rounded-xl border p-4 transition-colors duration-300 ease-in-out hover:bg-secondary/50"
>
      <Image
        src={cover}
        alt={title}
        width={width}
        height={height}
        format="avif"
        quality="mid"
        class="w-full aspect-[4/3] object-cover rounded-md mb-3"
        loading="lazy"
      />
  <div class="text-foreground dark:text-white">
    <h3 class="text-lg font-medium mb-1">{title}</h3>
  </div>
</a>