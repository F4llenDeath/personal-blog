---
import { Image } from 'astro:assets';
import { getLangFromUrl, useTranslatedPath } from '@/i18n/util';

export interface Props {
  id: string;
  title: string;
  description?: string;
  cover: ImageMetadata;
}

const { id, title, description, cover } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
---

<a
  href={translatePath(`/gallery/${id}`)}
  class="group block rounded-xl border p-4 transition-colors duration-300 ease-in-out hover:bg-secondary/50"
>
  <Image
    src={cover}
    alt={title}
    format="avif"
    quality="mid"
    class:list={[
      "w-full aspect-[4/3] object-cover rounded-md mb-3"
    ]}
  />
  <div class="text-foreground dark:text-white">
    <h3 class="text-lg font-medium mb-1">{title}</h3>
  </div>
</a>